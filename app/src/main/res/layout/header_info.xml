<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/boo_face"
        android:background="#fee"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/andriy"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="恋爱的终结"
                android:textSize="26dp"
                android:fitsSystemWindows="true"
                android:layout_marginLeft="12dp"/>
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="作者："/>
                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="[英]格雷厄姆—格林"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="出版社："/>
                <TextView
                    android:id="@+id/chubanshe"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="江苏凤凰文艺出版社"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="出版时间："/>
                <TextView
                    android:id="@+id/time_chuban"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="2017—4-5"/>
            </LinearLayout>

            <LinearLayout

                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="页数："/>
                <TextView
                    android:id="@+id/pagers"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="365页"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="ISBN："/>
                <TextView
                    android:id="@+id/isbn"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="9787555107408"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/download"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载"/>
                <Button
                    android:id="@+id/testread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="试读"/>

            </LinearLayout>
           <Button
               android:id="@+id/more"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="还有更多书籍猜你喜欢"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

</android.support.v7.widget.CardView>
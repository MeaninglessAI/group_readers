<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_marginTop="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/rounded_rectangle">
       <RelativeLayout
           android:background="@drawable/background"
           android:id="@+id/headr_plan_change"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:layout_marginTop="12dp">
           <TextView
               android:id="@+id/name_plan"
               android:layout_width="270dp"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:text="英语原著100天阅读计划"
               android:textSize="20dp"/>
           
           <TextView
               android:id="@+id/change_plan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:text="切换计划"
               android:textSize="18dp"
               android:layout_centerHorizontal="true"
               android:layout_centerInParent="true"
               android:gravity="center_vertical"/>
       </RelativeLayout>
       
       <RelativeLayout
           android:id="@+id/dd"
           android:layout_marginTop="8dp"
           android:layout_below="@id/headr_plan_change"
           android:layout_width="match_parent"
           android:layout_height="120dp">
           <ImageView
               android:id="@+id/plan_tree"
               android:layout_width="88dp"
               android:layout_height="88dp"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:src="@drawable/tree"/>
           
           <RelativeLayout
               android:layout_toRightOf="@id/plan_tree"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="4dp"
                   android:id="@+id/relativeLayout">
                   <LinearLayout
                       android:id="@+id/bb"
                       android:layout_marginLeft="24dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" 
                           android:textSize="16dp"
                           android:text="完成页数"/>
                       <TextView
                           android:id="@+id/num_pagers"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" 
                           android:textSize="20dp"
                           android:text="166"/>
                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/cc"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="24dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:text="剩余天数"/>
                       <TextView
                           android:id="@+id/num_leftdays"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="20dp"
                           android:text="60"/>
                   </LinearLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_marginBottom="18dp">
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" 
                               android:textSize="12dp"
                               android:layout_marginBottom="36dp"
                               android:text="计划进度"/>
                           <TextView
                               android:id="@+id/plan_show"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" 
                               android:text="0/2本"
                               android:layout_alignParentRight="true" />
                          <SeekBar
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_below="@id/plan_show" />
                       </RelativeLayout>
                   </RelativeLayout>
               </RelativeLayout>

           </RelativeLayout>
          
       </RelativeLayout>
       <LinearLayout
           android:layout_below="@id/dd"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/ee"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#000"
               android:layout_marginLeft="24dp"
               android:layout_marginRight="24dp"/>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="48dp">
               <ImageView
                   android:background="@drawable/background"
                   android:id="@+id/gg"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/calendar"
                   android:layout_marginLeft="46dp"
                   android:layout_marginTop="8dp"/>

               <LinearLayout
                   android:id="@+id/ff"
                   android:layout_marginLeft="64dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="16dp"
                       android:text="今日需读"/>
                   <TextView
                       android:id="@+id/num_pagertoday"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:text="5页"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginLeft="64dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="16dp"
                       android:text="已完成"/>
                   <TextView
                       android:id="@+id/num_finishpagertoday"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:text="0/5页"/>
               </LinearLayout>

           </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#000"
               android:layout_marginLeft="24dp"
               android:layout_marginRight="24dp"
               android:layout_marginBottom="12dp"/>
       </LinearLayout>
   </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >
            <RelativeLayout
                android:layout_width="78dp"
                android:layout_height="38dp"
                android:background="#e09"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划详情" />
            </RelativeLayout>
            <TextView
                android:id="@+id/edit_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="编辑计划"/>
        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="开始时间"/>
                <TextView
                    android:id="@+id/bigen_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="2017.1.1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="完成时间"/>
                <TextView
                    android:id="@+id/finish_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="2017.4.10"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计划书单"/>
</LinearLayout>
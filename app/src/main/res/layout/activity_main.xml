<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:scaleX="3"
        android:scaleY="3"
        android:src="@drawable/pp" />

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        tools:context=".Activity.MainActivity">



        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="#C378C8BE"
            android:gravity="center">

            <EditText
                android:id="@+id/email2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:hint="账号"
                android:inputType="textCapSentences|textEmailAddress"
                android:padding="20dp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/pass2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email2"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:hint="密码"
                android:inputType="textCapSentences"
                android:padding="20dp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/pass3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass2"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:hint="确认密码？"
                android:inputType="textCapSentences"
                android:padding="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:rotation="90"
                android:text="注册"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.25"
            android:background="#C37A80C1"
            android:gravity="center">


            <EditText
                android:id="@+id/email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="账号"
                android:textSize="15dp"
                android:inputType="textCapSentences|textEmailAddress"
                android:padding="20dp" />


            <EditText
                android:id="@+id/pass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email"
                android:layout_below="@+id/email"
                android:hint="密码"
                android:textSize="15dp"
                android:inputType="textCapSentences"
                android:padding="20dp" />


            <TextView
                android:id="@+id/forget"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pass"
                android:layout_alignStart="@+id/pass"
                android:layout_alignTop="@+id/pass"
                android:layout_marginTop="49dp"
                android:inputType="textCapSentences"
                android:padding="20dp"
                android:text="忘记密码?" />


            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forget"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:scaleX="2"
                android:scaleY="2"
                android:text="登录"
                android:textColor="#000000"
                android:textSize="20dp" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="30dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp">
<!--加入最后一条，后面的都是-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/fb"
            android:layout_marginRight="20dp" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/tw"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ln" />

    </LinearLayout>


</FrameLayout>
